<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navBar"
        android:orientation="horizontal"
        android:layout_marginTop="5sp"
        >
        <ImageView
            android:layout_width="200sp"
            android:layout_height="65sp"
            android:id="@+id/imageNavBar"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navBar"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bestOptionLabel"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="20sp"
        android:id="@+id/bestOptionLabel"/>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bestOptionLabel"
        android:orientation="vertical"
        android:background="@drawable/roundborderlightgray"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:id="@+id/linearLay1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bestOption"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bestOptionPrice"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bestOptionQuantity"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        android:layout_weight="1"
        android:textSize="15sp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/maisDetalhes"
            android:text="+"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/titleCompare"
        android:layout_below="@id/linearLay1"
        android:textSize="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundborders"
        android:layout_below="@id/titleCompare"
        android:layout_marginTop="10sp"
        android:id="@+id/linearLay2"
        android:orientation="vertical"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/white"
         android:id="@+id/compareName"
         android:layout_weight="1"
         android:layout_marginTop="5sp"
         android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/comparePrice"
        android:layout_weight="1"
        android:layout_marginTop="5sp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/compareQuantity"
        android:layout_weight="1"
        android:layout_marginTop="5sp"
        android:textSize="15sp"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/maisDetalhes2"
        android:text="+"
        android:gravity="center_vertical"/>

    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>