<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputActivity"
    android:background="@color/gray">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:id="@+id/titleInputs"
        android:text="@string/titleInput"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="20sp"
        android:layout_weight="0.05"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.8"
        android:id="@+id/scrollInput"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/titleInputs">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp"
                android:background="@drawable/roundborders"
                android:orientation="vertical"
                android:id="@+id/LinearLayInput1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/SpinnerTitle1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <Spinner
                        android:id="@+id/databaseSizeSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50sp"
                        android:spinnerMode="dialog"
                        android:textAlignment="viewStart"
                        android:prompt="@string/SpinnerTitle1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearLayInput2"
                android:background="@drawable/roundborders"
                android:orientation="vertical"
                android:layout_below="@id/LinearLayInput1"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/SpinnerTitle2"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:id="@+id/editTeamSize"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearLayInput3"
                android:background="@drawable/roundborders"
                android:orientation="vertical"
                android:layout_below="@id/LinearLayInput2"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/SpinnerTitle3"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <Spinner
                    android:id="@+id/projectsSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="50sp"
                    android:spinnerMode="dialog"
                    android:textAlignment="viewStart"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:prompt="@string/SpinnerTitle3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearLayInput4"
                android:background="@drawable/roundborders"
                android:orientation="vertical"
                android:layout_below="@id/LinearLayInput3"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/SpinnerTitle4"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <Spinner
                    android:id="@+id/projectTypeSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="50sp"
                    android:spinnerMode="dialog"
                    android:textAlignment="viewStart"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:prompt="@string/SpinnerTitle4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearLayInput5"
                android:background="@drawable/roundborders"
                android:orientation="vertical"
                android:layout_below="@id/LinearLayInput4"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/SpinnerTitle5"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/typeOfUsageSpinner"
                    android:spinnerMode="dialog"
                    android:textAlignment="viewStart"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:prompt="@string/SpinnerTitle5"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.1"
        android:textSize="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/roundborders"
        android:textAlignment="center"
        android:layout_below="@id/scrollInput"
        android:text="Finalizar e enviar"
        android:id="@+id/submitButton"
        />

</LinearLayout>



